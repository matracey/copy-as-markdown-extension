{
  "name": "copy-as-markdown-extension",
  "description": "Adds a context menu option to copy selected HTML content as Markdown.",
  "version": "0.0.2",
  "keywords": [
    "markdown",
    "utility",
    "developer-tools",
    "extension",
    "browser-extension",
    "web-extension"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/matracey/copy-as-markdown-extension.git"
  },
  "author": {
    "name": "Martin Tracey",
    "email": "martin.d.tracey@outlook.com",
    "url": "https://github.com/matracey"
  },
  "scripts": {
    "dev": "run-s build:images && extension dev",
    "start": "run-s build:images && extension start",
    "build": "run-s build:images && extension build && run-s postbuild",
    "postbuild": "rm -f dist/chrome/manifest.1.json && jq -r 'del(.content_scripts[].css)' dist/chrome/manifest.json > dist/chrome/manifest.1.json && rm -f dist/chrome/manifest.json && mv dist/chrome/manifest.1.json dist/chrome/manifest.json",
    "build:images": "node images.mjs",
    "postinstall": "run-s build:images"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.6.0",
    "@fortawesome/free-brands-svg-icons": "^6.6.0",
    "@fortawesome/free-regular-svg-icons": "^6.6.0",
    "@fortawesome/free-solid-svg-icons": "^6.6.0",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "daisyui": "^4.12.10",
    "react": "^18.1.0",
    "react-daisyui": "^5.0.5",
    "react-dom": "^18.1.0",
    "tailwindcss": "^3.4.1",
    "turndown": "^7.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@swc/core": "^1.7.28",
    "@types/chrome": "^0.0.272",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@types/turndown": "^5.0.5",
    "acorn": "^8.12.1",
    "ajv": "^8.17.1",
    "autoprefixer": "^10.4.20",
    "browserslist": "^4.24.0",
    "eslint": "^9.11.1",
    "eslint-plugin-react": "^7.37.0",
    "extension": "latest",
    "globals": "^15.9.0",
    "jimp": "^1.6.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "sharp": "^0.33.5",
    "tslib": "^2.7.0",
    "typescript": "5.3.3",
    "typescript-eslint": "^8.7.0",
    "webpack": "^5.94.0"
  }
}
